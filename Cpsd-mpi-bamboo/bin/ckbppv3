#!/bin/csh -f

 echo ....Using single precision code....
 set SRCDIR = ../ckbppv3
 set SRC1 = $SRCDIR/kbppv3.c

set PSPDIR = ~bylaska/Codes/Cpsd/PSP
set LIBS = -lblas


gcc -O3 $SRC1 -o kbppv3.exe $LIBS
echo
echo -n "enter a potential data filename: "
set source = $<
echo 
cp $PSPDIR/$source.dat .
kbppv3.exe $source.dat
mv DATAOUT $source.vpp
rm  kbppv3.exe $source.dat
exit
